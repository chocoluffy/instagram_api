<div class="jumbotron center">
	<h1><i class="fa fa-instagram fa-1x"></i> SearchInsta</h1>
	<p>Your Instagram Curiosity Satisfied</p>
	<br>

	<form class="col-lg-12">
	    <div class="input-group input-group-lg col-sm-offset-4 col-sm-4">
	      <input id="search" type="text" name="q" class="center-block form-control input-lg" title="Enter image tag to search." placeholder="Enter image tag to search">
	      <span class="input-group-btn"><button class="btn btn-lg btn-primary" type="submit">GO!</button></span>
	    </div>
     </form>
</div>

<div class="container">
	<div class="row">
		<% @search.each do |instagram| %>
		<div class="col-sm-8 col-md-4">
			<div class="profile-panel">
				<div class="thumbnail">
					<%= image_tag instagram.images.low_resolution.url %>
				</div>
			</div>

			<div class="mask"></div>
			<div class="profile-image circle">
				<%= image_tag instagram.user.profile_picture %>
			</div>



		</div>
		<% end %>
	</div>
</div>