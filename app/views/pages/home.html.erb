<div class="jumbotron center">
	<h1><i class="fa fa-instagram fa-1x"></i> Capital One Challenge </h1>
	<p>I want to join the summit!</p>
	<br>

	<form class="col-lg-12">
	    <div class="input-group input-group-lg col-sm-offset-4 col-sm-4">
	      <input id="search" type="text" name="q" class="center-block form-control input-lg" title="Enter image tag to search." placeholder="Enter image tag to search">
	      <span class="input-group-btn"><button class="btn btn-lg btn-primary" type="submit">GO!</button></span>
	    </div>
     </form>
</div>



<div class="container">
	<div class="row">
		<% filter_excessive_tags(@search, 5).each do |instagram| %>
		<div class="col-sm-8 col-md-4">
			<div class="profile-panel">
				<div class="thumbnail">
					<%= image_tag instagram.images.standard_resolution.url, :class => "thumbnail" %>
				</div>
			</div>

			<div class="mask"></div>
			<div class="profile-image circle">
				<%= image_tag instagram.user.profile_picture %>
			</div>
			
			<div class="caption">
				<h4><%= truncate(instagram.caption.text, length: 200) %></h4>
				<h4><i class="fa fa-heart fa-spin"></i> <%= instagram.likes[:count] %></h4>
				<h4>tags: <%= instagram.tags.size %></h4>
				<h4>stat: <%= instagram_tag_stat(@tag) %></h4>
			</div>
		</div>
		<% end %>
	</div>
</div>